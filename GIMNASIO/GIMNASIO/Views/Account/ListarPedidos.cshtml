<div>
    <div class="container">
        @model ICollection<Pedido>
        <div style="background-color: #00ffff" class="card card-cascade narrower view view-cascade gradient-card-header blue-gradient narrower py-2 mb-3 d-flex justify-content-between align-items-center">
            <h2 href="" class="white-text mx-3">Todos Los Pedidos</h2>
        </div>

        <br />

        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @TempData["Mensaje"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }


        <div class="row justify-content-center  float-left">
            @foreach (var P in Model)
            {

                <div class="card mr-3 ml-3 mb-3" style="width: 18rem;">
                    <div class="card" style="width: 18rem;">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Pedido: </strong>@P.PedidoId</li>
                            <li class="list-group-item"><strong>Cliente: </strong>@P.Cliente.Nombres</li>
                            <li class="list-group-item"><strong>Dirección: </strong>@P.Cliente.Direccion</li>
                            <li class="list-group-item"><strong>Ciudad: </strong>@P.Cliente.Ciudad</li>
                            <li class="list-group-item"><strong>Email: </strong>@P.Cliente.Email</li>
                            <li class="list-group-item"><strong>Fecha: </strong>@P.PedidoFecha</li>
                            <li class="list-group-item"><strong>Estado: </strong>@P.PedidoEstado.PedidoEstadoNombre</li>
                            <li class="list-group-item">
                                <strong>Ver Pedido: </strong>
                                <a asp-action="AdminPedido" asp-route-PedidoId="@P.PedidoId" class="mr-3"><i class="bi bi-card-image"></i></a>
                            </li>
                            <li class="list-group-item">
                                <strong>Editar Estado: </strong>
                                <a asp-action="EditarEstado" asp-route-PedidoId="@P.PedidoId" class="mr-3"><i class="fas fa-edit"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>

        <br />
        <div>
            <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index" style="margin-left: 500px">
                Volver Home
            </a>
        </div>
    </div>
</div>