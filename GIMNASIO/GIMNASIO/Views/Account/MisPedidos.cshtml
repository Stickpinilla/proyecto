<div>
    <div class="container">
        @model MisPedidosViewModel

        @{
            ViewData["Title"] = "Mis Pedidos";
            Layout = "~/Views/Shared/_Layout.cshtml";
        }

        <div style="background-color: #00ffff" class="card card-cascade narrower view view-cascade gradient-card-header blue-gradient narrower py-2 mb-3 d-flex justify-content-between align-items-center">
            <h2 href="" class="white-text mx-3">Historial de Pedidos</h2>
        </div>

        <hr />

        <table class="table table-striped">
            <thead style="background-color:#00ffff">
                <tr>
                    <td>Rut</td>
                    <td>Nombre</td>
                    <td>Apellido</td>
                    <td>Direccion</td>
                    <td>Correo</td>
                    <td>Ciudad</td>
                    <td><strong>Telefono: </strong></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.cliente.Rut</td>
                    <td>@Model.cliente.Nombres</td>
                    <td>@Model.cliente.ApellidoP</td>
                    <td>@Model.cliente.Direccion</td>
                    <td>@Model.cliente.Email</td>
                    <td>@Model.cliente.Ciudad</td>
                    <td>@Model.cliente.Telefono</td>
                </tr>

            </tbody>
        </table>

        <br />

        <div class="row justify-content-between">
            @foreach (var P in Model.ListaPedidos)
            {
                <div class="card mr-3 ml-3 mb-3" style="width: 18rem;">
                    <div class="card" style="width: 18rem;">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Numero Pedido: </strong>@P.PedidoId</li>
                            <li class="list-group-item"><strong>Fecha: </strong>@P.PedidoFecha</li>
                            <li class="list-group-item">
                                <strong>Total: </strong>
                                @string.Format(new System.Globalization.CultureInfo("es-CL"), "{0:C}", P.PedidoTotal)
                            </li>
                            <li class="list-group-item"><strong>Estado: </strong>@P.PedidoEstado</li>
                            <li class="list-group-item">
                                <strong>Ver Producto: </strong>
                                <a asp-action="DetallePedido" asp-route-PedidoId="@P.PedidoId" class="mr-3"><i class="fas fa-info-circle"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>

        <br />
        <div>
            <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index" style="margin-left: 500px">
                Volver Home
            </a>
        </div>
    </div>
</div>