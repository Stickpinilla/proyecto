@model GIMNASIO.Models.Categoria

@{
    ViewData["Title"] = "CrearCategorias";
}

<h1>Crear Categoria</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearCategorias">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre de Categoría</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Categoria" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
