@model GIMNASIO.Models.Categoria

@{
    ViewData["Title"] = "EliminarCategoria";
}

<div class="container text-center">
    <h2>Eliminar Categoría</h2>
    <h3>¿Está seguro de eliminar esta categoría? Si la elimina no podrá recuperarla.</h3>
    <hr>
</div>


<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="EliminarCategoria">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
    </form>
</div>
