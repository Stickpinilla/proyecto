@model EntrenamientoViewModel

<div class="container text-center">
    <h2>Entrenamientos</h2>
    <hr>
    <a asp-controller="Entrenamiento" asp-action="CrearEntrenamiento" class="btn btn-success pb-2"><i class="fa-solid fa-plus"></i> Agregar</a>
</div>
<br />

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<br />
<table class="table table-striped table-responsive-lg ">
    <thead>
        <tr>
            <th>
                Cupo total
            </th>
            <th>
                Cupo disponible
            </th>
            <th>
                Zona de Entrenamiento
            </th>
            <th>
                Estado del Entrenamiento
            </th>
            <th>
                Categoria
            </th>
            <th>
                Editar
            </th>
            <th>
                Eliminar
            </th>
            <th>
                Detalles
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var E in Model.ListarEntrenamiento)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => E.EntrenamientoCupoTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => E.EntrenamientoCupoDisponible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => E.entrenamientozona.EntrenamientoZona_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => E.entrenamientoestado.Entrenamiento_NombreEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => E.entrenamientocategoria.EntrenamientoCategoria_Nombre)
            </td>
            <td>
                <a asp-action="ModificarEntrenamiento" class="btn btn-warning" asp-route-EntrenamientoId="@E.EntrenamientoId">Editar</a>
            </td>
            <td>
                <a asp-action="EliminarEntrenamiento" class="btn btn-danger" asp-route-EntrenamientoId="@E.EntrenamientoId">Eliminar</a>
            </td>
            <td>
                <a asp-action="DetalleEntrenamiento" class="btn btn-primary" asp-route-EntrenamientoId="@E.EntrenamientoId">Detalles</a>
            </td>
        </tr>
        }
    </tbody>
</table>