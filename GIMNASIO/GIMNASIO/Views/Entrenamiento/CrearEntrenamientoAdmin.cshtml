@model GIMNASIO.Models.EntrenamientoUsuarioViewModel

@{
    ViewData["Title"] = "Crear Entrenamiento";
}

<div class="container text-center">
    <h2>Registro de Entrenamiento</h2>
    <hr>
</div>
<br>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearEntrenamientoAdmin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entrenamiento.EntrenamientoCupoTotal" class="control-label">Cupo Total</label>
                <input asp-for="Entrenamiento.EntrenamientoCupoTotal" class="form-control" />
                <span asp-validation-for="Entrenamiento.EntrenamientoCupoTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entrenamiento.EntrenamientoDescripcion" class="control-label">Descripción</label>
                <input asp-for="Entrenamiento.EntrenamientoDescripcion" class="form-control" />
                <span asp-validation-for="Entrenamiento.EntrenamientoDescripcion" class="text-danger"></span>
            </div>

            <!--Seleccionar estado-->
            <div class="form-group">
                <label asp-for="Entrenamiento.EntrenamientoZonaId" class="control-label">Zona disponible</label>
                <select asp-for="Entrenamiento.EntrenamientoZonaId" class="form-control" asp-items="ViewBag.EntrenamientoZonaId"></select>
            </div>

            <!--Seleccionar estado-->
            <div class="form-group">
                <label asp-for="Entrenamiento.EntrenamientoEstadoId" class="control-label">Estado</label>
                <select asp-for="Entrenamiento.EntrenamientoEstadoId" class="form-control" asp-items="ViewBag.EntrenamientoEstadoId"></select>
            </div>
            <!--Seleccionar estado-->
            <div class="form-group">
                <label asp-for="Entrenamiento.EntrenamientoCategoriaId" class="control-label">Categoría</label>
                <select asp-for="Entrenamiento.EntrenamientoCategoriaId" class="form-control" asp-items="ViewBag.EntrenamientoCategoriaId"></select>
            </div>

            <div class="form-group">
                <label asp-for="EntrenadorID" class="control-label">Entrenador</label>
                <select asp-for="EntrenadorID" class="form-control" asp-items="ViewBag.EntrenadorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
