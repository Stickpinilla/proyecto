@model GIMNASIO.Models.Mantencion

@{
    ViewData["Title"] = "ModificarMantencion";
}

<div class="container text-center">
    <h2>Modificar Mantención</h2>
    <hr>
</div>
<br />

<div class="card mb-3">
    <div class="card-body justify-content-center text-center">
        <div class="row mt-2 mb-3">
            <div class="col-6">
                <div class="col"><h5><b>Nombre: </b>@Model.Maquinaria.MaquinariaNombre</h5></div>
            </div>
            <div class="col-6">
                <div class="col"><h5><b>Numero de Serie: </b>@Model.Maquinaria.MaquinariaNumeroSerie</h5></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <form asp-action="ModificarMantencion" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MantencionId" />

            <div class="form-group">
                <label asp-for="MantencionDescripcion" class="control-label">Descripción/Fallas</label>
                <textarea asp-for="MantencionDescripcion" type="date" class="form-control"></textarea>
                <span asp-validation-for="MantencionDescripcion" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="MantencionProcedimiento" class="control-label">Procedimiento</label>
                <textarea asp-for="MantencionProcedimiento" type="date" class="form-control"></textarea>
                <span asp-validation-for="MantencionProcedimiento" class="text-danger"></span>
            </div>
     

            <div class="form-group">
                <label asp-for="MantencionFechaFin" class="control-label">Fecha de Finalización</label>
                <input asp-for="MantencionFechaFin" type="date" class="form-control" />
                <span asp-validation-for="MantencionFechaFin" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="MantencionFechaIngreso" />
            <input type="hidden" asp-for="MantencionFechaFin" />


            <div class="form-group">
                <label asp-for="EstadoMantencionId" class="control-label">Estado</label>
                <select asp-for="EstadoMantencionId" class="form-control" asp-items="ViewBag.EstadoMantencionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </form>
</div>