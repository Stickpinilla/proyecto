@model GIMNASIO.Models.Mantencion

@{
    ViewData["Title"] = "DetalleMantencion";
}

<div class="container text-center">
    <h2>Detalle Mantención</h2>
    <hr>
</div>
<br />

<div class="card mb-3">
    <div class="card-body justify-content-center text-center">
        <div class="row mt-2 mb-3">
            <div class="col-6">
                <div class="col"><h5><b>Ingreso: </b>@Html.DisplayFor(modelItem => Model.MantencionFechaIngreso)</h5></div>
            </div>
            <div class="col-6">
                <div class="col"><h5><b>Termino: </b>@Html.DisplayFor(modelItem => Model.MantencionFechaFin)</h5></div>
            </div>
            <div class="col-4">
                <div class="col"><h5><b>Maquinaria: </b>@Model.Maquinaria.MaquinariaNombre</h5></div>
            </div>
            <div class="col-4">
                <div class="col"><h5><b>N° de serie: </b>@Model.Maquinaria.MaquinariaNumeroSerie</h5></div>
            </div>
            <div class="col-4">
                <div class="col"><h5><b>Estado de Mantención </b>@Model.EstadoMantencion.EstadoMantencionNombre</h5></div>
            </div>
            <div class="col-12">
                <div class="col"><h5><b>Descripción: </b>@Model.MantencionDescripcion</h5></div>
            </div>
            <div class="col-12">
                <div class="col"><h5><b>Procedimiento: </b>@Model.MantencionProcedimiento</h5></div>
            </div>
        </div>
    </div>
</div>
