@model MaquinariaMantencionViewModel
@{
    ViewData["Title"] = "AgregarMantencionPorMaquinaria";
}

<div class="container text-center">
    <h2>Nueva Mantención</h2>
    <hr>
</div>
<br />

<div class="card">
    <div class="card-body justify-content-center text-center">
        <div class="row mt-2 mb-3">
            <div class="col-6">
                <div class="col"><h5><b>Número de Serie: </b>@Model.Maquinaria.MaquinariaNumeroSerie</h5></div>
                <div class="col"><h5><b>Máquina: </b>@Model.Maquinaria.MaquinariaNombre</h5></div>
            </div>
            <div class="col-6">
                <div class="col"><h5><b>Estado: </b>@Model.Maquinaria.EstadoMaquinaria.EstadoMaquinariaNombre</h5></div>
                <div class="col"><h5><b>Tipo de Máquina: </b>@Model.Maquinaria.TipoMaquinaria.TipoMaquinariaNombre</h5></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarMantencionPorMaquina" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="MantencionDescripcion" class="control-label">Descripción/Fallas</label>
                <textarea asp-for="MantencionDescripcion" class="form-control"></textarea>
                <span asp-validation-for="MantencionDescripcion" class="text-danger"></span>
            </div>


            <!--Seleccionar estado-->
            <div class="form-group">
                <label asp-for="EstadoMantencionId" class="control-label">Estado de Manteción</label>
                <select asp-for="EstadoMantencionId" class="form-control" asp-items="ViewBag.EstadoMantencionId"></select>
            </div>

            <input hidden asp-for="UserId" />
            <input hidden asp-for="MaquinariaId" />


            <div class="form-group">
                <input type="submit" value="Agregar Mantención" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<hr />
